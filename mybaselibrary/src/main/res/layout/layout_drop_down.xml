<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/trans_15px"
        android:paddingTop="@dimen/trans_15px"
        android:text="--"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/trans_28px"/>

    <com.fivefivelike.mybaselibrary.view.IconFontTextview
        android:id="@+id/tv_drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/trans_5px"
        android:gravity="center"
        android:layout_marginBottom="@dimen/trans_2px"
        android:paddingBottom="@dimen/trans_15px"
        android:paddingTop="@dimen/trans_15px"
        android:text=">"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_trans_12px"/>


</LinearLayout>
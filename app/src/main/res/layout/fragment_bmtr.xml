<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/main_drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent">

    <com.fivefivelike.mybaselibrary.view.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_Primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/trans_300px">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="224"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lin_order_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/trans_30px"
                            android:layout_weight="1"
                            android:background="@drawable/select_default_click"
                            android:orientation="horizontal">

                            <com.fivefivelike.mybaselibrary.view.IconFontTextview
                                android:id="@+id/tv_order_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingBottom="@dimen/trans_15px"
                                android:paddingLeft="@dimen/trans_30px"
                                android:paddingTop="@dimen/trans_15px"
                                android:text="BTC --"
                                android:textColor="@color/color_font1"
                                android:textSize="@dimen/text_trans_34px"/>


                            <com.fivefivelike.mybaselibrary.view.IconFontTextview
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight="1"
                                android:paddingBottom="@dimen/trans_15px"
                                android:paddingLeft="@dimen/trans_5px"
                                android:text="@string/ic_Down"
                                android:textColor="@color/color_font1"
                                android:textSize="@dimen/text_trans_26px"/>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/lin_lever"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/select_default_click"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/trans_30px"
                            android:paddingRight="@dimen/trans_30px">

                            <com.fivefivelike.mybaselibrary.view.IconFontTextview
                                android:id="@+id/tv_lever"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingBottom="@dimen/trans_15px"
                                android:paddingTop="@dimen/trans_15px"
                                android:text=""
                                android:textColor="@color/color_font1"
                                android:textSize="@dimen/text_trans_34px"/>

                            <com.fivefivelike.mybaselibrary.view.IconFontTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="center"
                                android:paddingBottom="@dimen/trans_15px"
                                android:paddingLeft="@dimen/trans_5px"
                                android:text="@string/ic_Down"
                                android:textColor="@color/color_font1"
                                android:textSize="@dimen/text_trans_26px"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_to_kline"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="151"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <com.fivefivelike.mybaselibrary.view.SingleLineZoomTextView
                            android:id="@+id/tv_now_price"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/trans_25px"
                            android:gravity="center_vertical|right"
                            android:text="--"
                            android:textColor="@color/color_font2"
                            android:textSize="@dimen/text_trans_36px"/>

                        <ImageView
                            android:id="@+id/iv_to_kline"
                            android:layout_width="@dimen/trans_40px"
                            android:layout_height="@dimen/trans_40px"
                            android:layout_marginRight="@dimen/trans_30px"
                            android:src="@drawable/ic_to_kline"
                            />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_2px"
                    android:layout_marginLeft="@dimen/trans_30px"
                    android:layout_marginRight="@dimen/trans_30px"
                    android:background="@color/base_mask"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="224"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/trans_30px"
                        android:paddingRight="@dimen/trans_30px">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/trans_15px"
                            android:paddingTop="@dimen/trans_20px">

                            <TextView
                                android:id="@+id/tv_open"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/shape_mark_border_r5"
                                android:gravity="center"
                                android:padding="@dimen/trans_5px"
                                android:text="开仓"
                                android:textColor="@color/mark_color"
                                android:textSize="@dimen/text_trans_22px"/>

                            <Space
                                android:layout_width="@dimen/trans_15px"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tv_close"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/shape_gray_border_r5"
                                android:gravity="center"
                                android:padding="@dimen/trans_5px"
                                android:text="平仓"
                                android:textColor="@color/color_font4"
                                android:textSize="@dimen/text_trans_22px"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_stop_loss"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/trans_5px"
                            android:paddingTop="@dimen/trans_5px"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_limit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingBottom="@dimen/trans_5px"
                                android:paddingLeft="@dimen/trans_20px"
                                android:paddingRight="@dimen/trans_20px"
                                android:paddingTop="@dimen/trans_5px"
                                android:text="限价"
                                android:textColor="@color/color_Primary"
                                android:textSize="@dimen/text_trans_20px"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tv_now_price_stop_loss"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingBottom="@dimen/trans_5px"
                                android:paddingLeft="@dimen/trans_20px"
                                android:paddingRight="@dimen/trans_20px"
                                android:paddingTop="@dimen/trans_5px"
                                android:text="市价止损"
                                android:textColor="@color/color_Primary"
                                android:textSize="@dimen/text_trans_20px"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tv_limit_stop_loss"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingBottom="@dimen/trans_5px"
                                android:paddingLeft="@dimen/trans_20px"
                                android:paddingRight="@dimen/trans_20px"
                                android:paddingTop="@dimen/trans_5px"
                                android:text="限价止损"
                                android:textColor="@color/color_Primary"
                                android:textSize="@dimen/text_trans_20px"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_trigger_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/trans_15px"
                            android:background="@drawable/shape_gray_border_r5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/trans_10px"
                                android:text="触发价格"
                                android:textColor="@color/color_font3"
                                android:textSize="@dimen/text_trans_24px"/>

                            <EditText
                                android:id="@+id/tv_trigger_price"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="right|center_vertical"
                                android:inputType="numberDecimal"
                                android:paddingRight="@dimen/trans_15px"
                                android:textColor="@color/color_font1"
                                android:textSize="@dimen/text_trans_30px"/>

                            <TextView
                                android:id="@+id/tv_trigger_price_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingRight="@dimen/trans_10px"
                                android:text="USD"
                                android:textColor="@color/color_font3"
                                android:textSize="@dimen/text_trans_24px"/>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/lin_order_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/trans_15px"
                            android:background="@drawable/shape_gray_border_r5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/trans_10px"
                                android:text="价格"
                                android:textColor="@color/color_font3"
                                android:textSize="@dimen/text_trans_24px"/>

                            <EditText
                                android:id="@+id/tv_order_price"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="right|center_vertical"
                                android:inputType="numberDecimal"
                                android:paddingRight="@dimen/trans_15px"
                                android:textColor="@color/color_font1"
                                android:textSize="@dimen/text_trans_30px"/>

                            <TextView
                                android:id="@+id/tv_order_price_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingRight="@dimen/trans_10px"
                                android:text="USD"
                                android:textColor="@color/color_font3"
                                android:textSize="@dimen/text_trans_24px"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_order_select_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:id="@+id/fl_opponent_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingBottom="@dimen/trans_30px"
                                android:paddingTop="@dimen/trans_30px"
                                >

                                <TextView
                                    android:id="@+id/tv_opponent_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_gray_border_r5"
                                    android:gravity="center"
                                    android:padding="@dimen/trans_5px"
                                    android:text="对手价"
                                    android:textColor="@color/color_font4"
                                    android:textSize="@dimen/text_trans_22px"/>
                            </FrameLayout>

                            <Space
                                android:layout_width="@dimen/trans_15px"
                                android:layout_height="wrap_content"/>

                            <FrameLayout
                                android:id="@+id/fl_buy_one_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingBottom="@dimen/trans_30px"
                                android:paddingTop="@dimen/trans_30px"
                                >

                                <TextView
                                    android:id="@+id/tv_buy_one_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_gray_border_r5"
                                    android:gravity="center"
                                    android:padding="@dimen/trans_5px"
                                    android:text="买一价"
                                    android:textColor="@color/color_font4"
                                    android:textSize="@dimen/text_trans_22px"/>
                            </FrameLayout>

                            <Space
                                android:layout_width="@dimen/trans_15px"
                                android:layout_height="wrap_content"/>

                            <FrameLayout
                                android:id="@+id/fl_sell_one_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingBottom="@dimen/trans_30px"
                                android:paddingTop="@dimen/trans_30px"
                                >

                                <TextView
                                    android:id="@+id/tv_sell_one_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_gray_border_r5"
                                    android:gravity="center"
                                    android:padding="@dimen/trans_5px"
                                    android:text="卖一价"
                                    android:textColor="@color/color_font4"
                                    android:textSize="@dimen/text_trans_22px"/>
                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_order_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_gray_border_r5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/trans_10px"
                                android:text="数量"
                                android:textColor="@color/color_font3"
                                android:textSize="@dimen/text_trans_24px"/>

                            <EditText
                                android:id="@+id/tv_order_num"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:digits="0123456789."
                                android:gravity="right|center_vertical"
                                android:inputType="numberDecimal"
                                android:paddingRight="@dimen/trans_15px"
                                android:textColor="@color/color_font1"
                                android:textSize="@dimen/text_trans_30px"/>

                            <TextView
                                android:id="@+id/tv_order_num_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingRight="@dimen/trans_10px"
                                android:text="USD"
                                android:textColor="@color/color_font3"
                                android:textSize="@dimen/text_trans_24px"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_stop_loss_toast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/trans_negative_10px"
                            android:gravity="center"
                            android:paddingTop="@dimen/trans_5px"
                            android:text="下单数量超出可平会反向开单"
                            android:textColor="@color/mark_color"
                            android:textSize="@dimen/text_trans_18px"
                            android:visibility="gone"/>

                        <com.fivefivelike.mybaselibrary.view.RoundButton
                            android:id="@+id/tv_buy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/trans_40px"
                            android:gravity="center"
                            android:padding="@dimen/trans_13px"
                            android:text=""
                            android:textColor="@color/color_Primary"
                            android:textSize="@dimen/text_trans_30px"
                            app:btnCornerRadius="@dimen/trans_5px"
                            app:btnSolidColor="@color/decreasing_color"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/trans_20px"
                            android:paddingTop="@dimen/trans_10px">

                            <LinearLayout
                                android:id="@+id/lin_buy_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.fivefivelike.mybaselibrary.view.LineTextView
                                    android:id="@+id/tv_buy_left"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/trans_15px"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="可用"
                                    android:textColor="@color/color_font3"
                                    android:textSize="@dimen/text_trans_20px"
                                    app:cnNum="3"/>

                                <TextView
                                    android:id="@+id/tv_buy_available"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/trans_15px"
                                    android:layout_weight="1"
                                    android:text="--"
                                    android:textColor="@color/color_font1"
                                    android:textSize="@dimen/text_trans_20px"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/trans_10px">

                                <com.fivefivelike.mybaselibrary.view.LineTextView
                                    android:id="@+id/tv_buy_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/trans_15px"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="可开多"
                                    android:textColor="@color/color_font3"
                                    android:textSize="@dimen/text_trans_20px"
                                    app:cnNum="3"/>

                                <TextView
                                    android:id="@+id/tv_buy_type_num"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/trans_15px"
                                    android:layout_weight="1"
                                    android:text="--"
                                    android:textColor="@color/color_font1"
                                    android:textSize="@dimen/text_trans_20px"/>

                            </LinearLayout>


                        </LinearLayout>


                        <com.fivefivelike.mybaselibrary.view.RoundButton
                            android:id="@+id/tv_sell"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/trans_13px"
                            android:text=""
                            android:textColor="@color/color_Primary"
                            android:textSize="@dimen/text_trans_30px"
                            app:btnCornerRadius="@dimen/trans_5px"
                            app:btnSolidColor="@color/increasing_color"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/trans_20px"
                            android:paddingTop="@dimen/trans_10px">

                            <LinearLayout
                                android:id="@+id/lin_sell_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.fivefivelike.mybaselibrary.view.LineTextView
                                    android:id="@+id/tv_sell_left"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/trans_15px"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="可用"
                                    android:textColor="@color/color_font3"
                                    android:textSize="@dimen/text_trans_20px"
                                    app:cnNum="3"/>

                                <TextView
                                    android:id="@+id/tv_sell_available"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/trans_15px"
                                    android:layout_weight="1"
                                    android:text="--"
                                    android:textColor="@color/color_font1"
                                    android:textSize="@dimen/text_trans_20px"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/trans_10px">

                                <com.fivefivelike.mybaselibrary.view.LineTextView
                                    android:id="@+id/tv_sell_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/trans_15px"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="可开空"
                                    android:textColor="@color/color_font3"
                                    android:textSize="@dimen/text_trans_20px"
                                    app:cnNum="3"/>

                                <TextView
                                    android:id="@+id/tv_sell_type_num"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/trans_15px"
                                    android:layout_weight="1"
                                    android:text="--"
                                    android:textColor="@color/color_font1"
                                    android:textSize="@dimen/text_trans_20px"/>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="151"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingRight="@dimen/trans_20px">

                            <TextView
                                android:id="@+id/tv_show_price_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingBottom="@dimen/trans_15px"
                                android:paddingTop="@dimen/trans_5px"
                                android:text="价格"
                                android:textColor="@color/color_font3"
                                android:textSize="@dimen/text_trans_24px"/>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tv_coin_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingBottom="@dimen/trans_15px"
                                android:paddingTop="@dimen/trans_5px"
                                android:text="数量"
                                android:textColor="@color/color_font3"
                                android:textSize="@dimen/text_trans_24px"/>

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_buy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/trans_2px"
                            android:layout_marginBottom="@dimen/trans_5px"
                            android:layout_marginRight="@dimen/trans_30px"
                            android:layout_marginTop="@dimen/trans_5px"
                            android:background="@color/base_mask"/>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_sell"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/trans_2px"
                            android:layout_marginRight="@dimen/trans_30px"
                            android:layout_marginTop="@dimen/trans_10px"

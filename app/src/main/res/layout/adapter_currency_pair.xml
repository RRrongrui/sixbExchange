<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_default_click"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_piv"
            android:layout_width="@dimen/trans_30px"
            android:layout_height="@dimen/trans_30px"
            android:layout_marginBottom="@dimen/trans_25px"
            android:layout_marginLeft="@dimen/trans_60px"
            android:layout_marginRight="@dimen/trans_10px"
            android:layout_marginTop="@dimen/trans_25px"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_28px"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_28px"/>

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="@dimen/trans_30px"
            android:layout_height="@dimen/trans_30px"
            android:layout_marginLeft="@dimen/trans_50px"
            android:layout_marginRight="@dimen/trans_50px"
            android:src="@drawable/ic_check"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:layout_marginLeft="@dimen/trans_60px"
        android:layout_marginRight="@dimen/trans_40px"
        android:background="@color/base_mask"/>


</LinearLayout>
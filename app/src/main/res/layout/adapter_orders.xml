<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.fivefivelike.mybaselibrary.view.ShadowLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/trans_15px"
        android:layout_marginRight="@dimen/trans_15px"
        android:clipChildren="false"
        app:sl_cornerRadius="@dimen/trans_10px"
        app:sl_dx="@dimen/trans_5px"
        app:sl_dy="@dimen/trans_5px"
        app:sl_shadowColor="@color/base_mask_less"
        app:sl_shadowRadius="@dimen/trans_10px"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_radiu_t5"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/trans_25px"
                    android:paddingLeft="@dimen/trans_35px"
                    android:paddingTop="@dimen/trans_25px"
                    android:text=""
                    android:textColor="@color/color_font1"
                    android:textSize="@dimen/text_trans_36px"/>


                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/trans_35px"
                    android:gravity="center"
                    android:paddingBottom="@dimen/trans_10px"
                    android:paddingLeft="@dimen/trans_20px"
                    android:paddingRight="@dimen/trans_20px"
                    android:paddingTop="@dimen/trans_10px"
                    android:text=""
                    android:textColor="@color/color_Primary"
                    android:textSize="@dimen/text_trans_22px"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_2px"
                android:layout_marginLeft="@dimen/trans_10px"
                android:layout_marginRight="@dimen/trans_10px"
                android:background="@color/base_mask"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/trans_55px"
                android:paddingTop="@dimen/trans_30px">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_open_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/trans_10px"
                        android:text=""
                        android:textColor="@color/mark_color"
                        android:textSize="@dimen/text_trans_40px"/>

                    <TextView
                        android:id="@+id/tv_open_amount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="委托数量"
                        android:textColor="@color/color_font2"
                        android:textSize="@dimen/text_trans_20px"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_hold_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/trans_10px"
                        android:text=""
                        android:textColor="@color/mark_color"
                        android:textSize="@dimen/text_trans_40px"/>

                    <TextView
                        android:id="@+id/tv_hold_amount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="已成交数量"
                        android:textColor="@color/color_font2"
                        android:textSize="@dimen/text_trans_20px"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/trans_25px"
                android:paddingLeft="@dimen/trans_30px"
                android:paddingRight="@dimen/trans_30px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="委托价格"
                    android:textColor="@color/color_font3"
                    android:textSize="@dimen/text_trans_24px"/>

                <TextView
                    android:id="@+id/tv_open_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预估爆仓价"
                    android:textColor="@color/color_font1"
                    android:textSize="@dimen/text_trans_24px"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/trans_25px"
                android:paddingLeft="@dimen/trans_30px"
                android:paddingRight="@dimen/trans_30px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="成交均价"
                    android:textColor="@color/color_font3"
                    android:textSize="@dimen/text_trans_24px"/>

                <TextView
                    android:id="@+id/tv_avg_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预估爆仓价"
                    android:textColor="@color/color_font1"
                    android:textSize="@dimen/text_trans_24px"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/trans_40px"
                android:paddingLeft="@dimen/trans_30px"
                android:paddingRight="@dimen/trans_30px"
                android:paddingTop="@dimen/trans_15px">

                <TextView
                    android:id="@+id/tv_statu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/color_font1"
                    android:textSize="@dimen/text_trans_26px"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_font2"
                    android:textSize="@dimen/text_trans_24px"/>

            </LinearLayout>


        </LinearLayout>
    </com.fivefivelike.mybaselibrary.view.ShadowLayout>
</LinearLayout>
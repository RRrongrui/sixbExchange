<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/trans_20px"
        android:paddingLeft="@dimen/trans_30px"
        android:paddingRight="@dimen/trans_40px"
        android:paddingTop="@dimen/trans_30px">


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/trans_10px"
            android:gravity="center"
            android:paddingBottom="@dimen/trans_5px"
            android:paddingLeft="@dimen/trans_15px"
            android:paddingRight="@dimen/trans_15px"
            android:paddingTop="@dimen/trans_5px"
            android:text=""
            android:textColor="@color/color_Primary"
            android:textSize="@dimen/text_trans_22px"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_36px"/>

        <com.fivefivelike.mybaselibrary.view.RoundButton
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/trans_5px"
            android:paddingLeft="@dimen/trans_35px"
            android:paddingRight="@dimen/trans_35px"
            android:paddingTop="@dimen/trans_5px"
            android:text="撤单"
            android:textColor="@color/mark_color"
            android:textSize="@dimen/text_trans_26px"
            app:btnCornerRadius="@dimen/trans_5px"
            app:btnStrokeColor="@color/mark_color"
            app:btnStrokeWidth="@dimen/trans_2px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/trans_15px"
        android:paddingLeft="@dimen/trans_30px"
        android:paddingRight="@dimen/trans_30px">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="@dimen/trans_40px"
                android:text="委托量"
                android:textColor="@color/color_font3"
                android:textSize="@dimen/text_trans_20px"/>

            <TextView
                android:id="@+id/tv_open_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_22px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="@dimen/trans_40px"
                android:text="委托价"
                android:textColor="@color/color_font3"
                android:textSize="@dimen/text_trans_20px"/>

            <TextView
                android:id="@+id/tv_open_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_22px"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/trans_15px"
        android:paddingLeft="@dimen/trans_30px"
        android:paddingRight="@dimen/trans_30px">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="@dimen/trans_40px"
                android:text="成交量"
                android:textColor="@color/color_font3"
                android:textSize="@dimen/text_trans_20px"/>

            <TextView
                android:id="@+id/tv_hold_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_22px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:visibility="invisible"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="@dimen/trans_40px"
                android:text="保证金"
                android:textColor="@color/color_font3"
                android:textSize="@dimen/text_trans_20px"/>

            <TextView
                android:id="@+id/tv_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_22px"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:layout_marginLeft="@dimen/trans_35px"
        android:layout_marginRight="@dimen/trans_35px"
        android:layout_marginTop="@dimen/trans_5px"
        android:background="@color/base_mask"/>

</LinearLayout>
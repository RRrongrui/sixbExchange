<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/trans_20px"
    android:layout_marginRight="@dimen/trans_20px"
    android:layout_marginTop="@dimen/trans_40px"
    android:background="@drawable/shape_gray_border_r5"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_exch"
            android:layout_width="@dimen/trans_30px"
            android:layout_height="@dimen/trans_30px"
            android:layout_marginBottom="@dimen/trans_15px"
            android:layout_marginLeft="@dimen/trans_30px"
            android:layout_marginRight="@dimen/trans_10px"
            android:layout_marginTop="@dimen/trans_15px"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/trans_30px"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_20px"/>


        <TextView
            android:id="@+id/tv_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_font3"
            android:textSize="@dimen/text_trans_20px"/>

        <com.fivefivelike.mybaselibrary.view.IconFontTextview
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/trans_5px"
            android:paddingRight="@dimen/trans_20px"
            android:text="@string/ic_Info2"
            android:textColor="@color/color_font3"
            android:textSize="@dimen/text_trans_20px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_2px"
        android:layout_marginLeft="@dimen/trans_35px"
        android:layout_marginRight="@dimen/trans_35px"
        android:background="@color/base_mask"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/trans_30px">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/trans_20px"
                android:gravity="center"
                android:text="交易所资产"
                android:textColor="@color/color_font3"
                android:textSize="@dimen/text_trans_16px"/>

            <TextView
                android:id="@+id/tv_all_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/trans_20px"
                android:layout_marginTop="@dimen/trans_15px"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_28px"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/trans_20px"
                android:gravity="center"
                android:text="可用资产"
                android:textColor="@color/color_font3"
                android:textSize="@dimen/text_trans_16px"/>

            <TextView
                android:id="@+id/tv_available_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/trans_20px"
                android:layout_marginTop="@dimen/trans_15px"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_28px"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="@dimen/trans_90px"
                android:layout_height="@dimen/trans_90px"
                android:layout_marginRight="@dimen/trans_10px"
                android:padding="@dimen/trans_30px"
                />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_Primary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingLeft="@dimen/trans_30px"
            android:background="@drawable/select_default_click"
            android:paddingRight="@dimen/trans_30px"
            android:paddingTop="@dimen/trans_20px"
            android:text="@string/str_cancel"
            android:textColor="@color/color_font3"
            android:textSize="@dimen/text_trans_30px"/>

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingLeft="@dimen/trans_30px"
            android:paddingRight="@dimen/trans_30px"
            android:paddingTop="@dimen/trans_20px"
            android:background="@drawable/select_default_click"
            android:text="@string/str_confirm"
            android:textColor="@color/mark_color"
            android:textSize="@dimen/text_trans_30px"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:background="@color/base_mask"/>

    <com.wheelview.Wheel3DView
        android:id="@+id/month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:openVoice="true"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/trans_90px"
              android:background="@drawable/select_default_click"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/trans_35px">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_font1"
                    android:textSize="@dimen/text_trans_24px"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_trans_22px"/>


            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/trans_5px"/>

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_font4"
                android:textSize="@dimen/text_trans_20px"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_22px"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/trans_5px"/>

            <TextView
                android:id="@+id/tv_conversion_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_font4"
                android:textSize="@dimen/text_trans_20px"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="@dimen/trans_150px"
            android:layout_height="@dimen/trans_65px"
            android:layout_marginBottom="@dimen/trans_15px"
            android:layout_marginRight="@dimen/trans_30px"
            android:layout_marginTop="@dimen/trans_15px"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_Primary"
            android:textSize="@dimen/text_trans_30px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:layout_marginLeft="@dimen/trans_35px"
        android:background="@color/base_mask"/>


</LinearLayout>
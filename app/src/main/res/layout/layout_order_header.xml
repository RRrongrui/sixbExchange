<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <com.tablayout.CommonTabLayout
        android:id="@+id/tl_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_75px"
        android:layout_marginLeft="@dimen/trans_100px"
        android:layout_marginRight="@dimen/trans_100px"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        tl:tl_indicator_height="@dimen/trans_0px"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/mark_color"
        tl:tl_textUnselectColor="@color/color_font2"
        tl:tl_textsize="@dimen/text_trans_26px"
        tl:tl_underline_color="#1A000000"
        tl:tl_underline_height="0dp"
        />

</LinearLayout>